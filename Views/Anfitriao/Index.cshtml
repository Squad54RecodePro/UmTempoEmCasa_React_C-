@model IEnumerable<UmTempoEmCasa.Models.Anfitriao>

@{
    ViewData["Title"] = "Index";
}

<div class="container formulario">

    <h1>Lista de Anfitriões</h1>
    <p>
        <a asp-action="Create">Adicionar novo Anfitrião</a>
    </p>

    <table class="table table-sucess table-striped" style="background-color: white; text-align: center;">
        <thead class="formulario">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th>Alterar</th>
                <th>Detalhes</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnfitriaoID">Alterar</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AnfitriaoID">Detalhes</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.AnfitriaoID">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>