@model UmTempoEmCasa.Models.Anuncio

@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">

    <h1>Criar</h1>
    <h4>Anúncio</h4>
    <hr />

    <div class="container" style="text-align:center;">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="ImovelForeignKey" class="form-label"></label>
                    <select asp-for="ImovelForeignKey" class ="form-control" asp-items="ViewBag.ImovelForeignKey"></select>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="inicio" class="form-label"></label>
                    <input asp-for="inicio" class="form-control" />
                    <span asp-validation-for="inicio" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="valor" class="form-label"></label>
                    <input asp-for="valor" class="form-control" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Criar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index"><b>Acessar a lista de Anúncios</b></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
