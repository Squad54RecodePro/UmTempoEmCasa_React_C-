@model IEnumerable<UmTempoEmCasa.Models.Contato>

@{
    ViewData["Title"] = "Index";
}

<div class="container formulario">

    <h1>Lista de Contatos</h1>
    <p>
        <a asp-action="Create">Adicionar novo Contato</a>
    </p>
    <table class="table table-sucess table-striped" style="background-color: white; text-align: center;">
        <thead class="formulario">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.assunto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mensagem)
                </th>
                <th>Alterar</th>
                <th>Detalhes</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.assunto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mensagem)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Alterar</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
                <td>                
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>