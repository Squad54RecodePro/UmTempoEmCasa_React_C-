@model UmTempoEmCasa.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<div class="container formulario">
    <h1>Excluir</h1>

    <h3 style="color: red;">Você deseja realmente excluir</h3>
    <div>
        <h4>Reserva</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Refugiados)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Refugiados.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Anuncios)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Anuncios.AnuncioID)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateInicio)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateInicio)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataFim)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataFim)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReservaID" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar para a Lista</a>
        </form>
    </div>
</div>